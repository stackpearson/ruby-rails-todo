<p id="notice"><%= notice %></p>

<h1 class="todo-header">Keep track of your todos here!</h1>

<span class="todo-new">
  <%= link_to '+', new_todo_path %>
</span>



<div class="todo-container">
  <table>
    <tbody >
      <% @todos.each do |todo| %>
        <tr>
            <td class='todo-name'><%= todo.name %></td>
        </tr>
        <tr class=todo-controller>
            <td><%= link_to 'Tasks', todo %></td>
            <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
            <td><%= link_to 'Delete', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody> 
  </table>





</div>