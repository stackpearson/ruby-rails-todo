<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @todo.name %>
</p>
<% @tasks.each do |task|%>

  <p><%= task.title %></p>
    <%= form_for task do |f| %>
      <%= f.check_box :done, :value => task.done %>
    <%= f.submit 'Complete' %>
  <% end %>
<% end %>

<%= form_for @task do |f| %>
  <p><%= f.text_field :title %></p>
  <%= f.hidden_field :todo_id, :value => @todo.id %>
  <%= f.submit 'Add To List' %>
<% end %>

<%= link_to 'Edit', edit_todo_path(@todo) %> |
<%= link_to 'Back', todos_path %>
